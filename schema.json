  "ordering": {
    // To determine:
    // - one or many
    // - exposed options?
    // - default
    "sort": {
      "enabled": false,
      "promote": false,
      "fields": [
        { "field": "title", "direction": "asc" }
      ]
    }
    // Way to define configurable items per page
  },
  "mapping": {
    // Define the component you want to display the results.
    "component": "vh-result-item",
    // Define what prop on that component maps to what field in the ES results.
    // { type: "icon, text, date, image, link, formatted", ...props }
    "mapping": {
      "icon": { "type": "icon", "symbol": "audio" },
      "title": { "type": "text", "field": "field_title" },
      "date": { "type": "date", "field": "field_start_date", "format": "DD MMM YYYY" },
      "subTop": {
        "type": "formatted",
        "fields": [
          { "type": "text", "field": "field_conviction_number" },
          { "type": "date", "field": "field_date_of_conviction", "format": "DD MMM YYYY" }
        ],
        "format": "Conviction number: {field_conviction_number} | Date of conviction: {field_date_of_conviction}"
      },
      "summary": { "type": "text", "field": "field_summary" },
      "subBottom": {
        "type": "formatted",
        "fields": [
          { "type": "text", "field": "field_format" },
          { "type": "text", "field": "field_duration" },
          { "type": "text", "field": "field_size" }
        ],
        "format": "Format: {field_format} | Duration: {field_duration} | Size: {field_size}"
      }
    }
  }
}

