{
  "title": "Search",
  "description": "",
  // Included the ability to set wording on search listing.
  "resultsCountText": "Displaying {range} of {count} results",
  "loadingText": "Loading",
  "noResultsText": "Sorry! We couldn't find any matches",
  "errorText": "Search isn't working right now, please try again later.",
  "internalFilters": {
    // -------------------------------------------------------------------------
    // Option A - Provide some simplified ways to define rules. These get converted
    // into an es DSL query.
    // For displaying individual cards
    "contentIds": [],
    // For displaying content by type
    "contentTypes": ["profile"],
    // For displaying content by various field values
    "contentFields": {
      "field_topic": {
        "operator": "AND",
        "values": [1],
      },
      "field_tags": {
        "operator": "AND",
        "values": [5],
      }
    },
    // When used like a "Related articles" list, we may want to exclude current page.
    "includeCurrentPage": true,
    "excludeIds": [],
    // For displaying content by date
    "dateFilter": {
      "criteria": "range",
      "startDateField": "field_profile_womens_inducted_date",
      "endDateField": "field_profile_womens_inducted_date",
      "dateRangeStart": "2021-01-01T11:28:23+10:00",
      "dateRangeEnd": "2022-01-01T11:28:23+10:00"
    },
    // -------------------------------------------------------------------------
    // Option B - A single generic way to define fields - this is a bit more flexible
    "fields": [
      {
        // For displaying individual cards
        "uuid": { "operator": "OR", "values": ["74194B73-0800-40C3-B110-C1F5A79D2B11"] }
      },
      {
        // For displaying content by type
        "type": { "operator": "AND", "values": ["profile"] }
      },
      {
        // For displaying tags (and other filters)
        "field_tags": { "operator": "AND", "values": [5] }
      },
      {
        // An example of grouping by operator
        "operator": "AND",
        "fields": [
          {
            "field_date": { "operator": "OR", "values": [9, 15, 20] }
          }
        ]
      }
    ],
    // -------------------------------------------------------------------------
    // Option C - Pure es DSL Query - most flexbile.
    // Would this option be be viable?
    // This would be used instead of the above filters to provide more flexibiltiy
    // for non-cms-managed lists.
    "custom": {
      "bool": {
        "must": {
          "match_all": {}
        },
        "filter": [
          {
            "range": { "field_event_date_end_value": { "gte": "2020-01-30T13:00:00.000Z" }  }
          },
          {
            "terms": { "type": ["event"] }
          },
          {
            "terms": { "field_node_site": ["4"] }
          }
        ]
      }
    }
    // -------------------------------------------------------------------------
  },
  "exposedFilters": {
    // Keyword filter
    "keyword": {
      "label": "Searchh by keyword",
      "placeholder": "Enter keyword(s)",
      "fields": [ "title" ]
    },
    // Advanced filters
    "filters": {
      // What should "displayHidden" do?
      "displayHidden": false,
      "submitOnChange": false,
      "fields": [
        {
          // Populated from provided options
          "field": "field_year",
          "fieldType": "static",
          "options": ["1998", "1999", "2000"],
          "label": "Year",
          "placeholder": "Select a year",
          "component": "select",
          "width": "50%",
          "additionalClasses": []
        },
        {
          // Populated from aggregated search results
          "field": "field_category",
          "fieldType": "aggregation",
          "label": "Category",
          "placeholder": "Select a category",
          "component": "select",
          "width": "50%",
          "additionalClasses": []
        },
      ]
    }
  },
  "permutations": {
    // Sorting - Allows for default, or for exposed
    "sort": {
      "default": [
        { "field": "title", "direction": "asc" }
      ],
      "exposed": true,
      "exposedOptions": [
        { "name": "Relevance", "value": null, "default": true },
        { "name": "Title A-Z", "value": [ { "field": "title", "direction": "asc" } ] },
        { "name": "Title Z-A", "value": [ { "field": "title", "direction": "desc" } ] },
        { "name": "Newest", "value": [ { "field": "field_date", "direction": "asc" } ] },
        { "name": "Oldest", "value": [ { "field": "field_date", "direction": "desc" } ] }
      ]
    },
    // Items Per Page - Allows for default, or for exposed
    "itemsPerPage": {
      "default": 9,
      "exposed": true,
      "exposedOptions": [
        { "name": "10", "value": 10, "default": true },
        { "name": "20", "value": 20 },
        { "name": "50", "value": 50 },
        { "name": "All", "value": 9999 }
      ]
    }
  },
  "displayOptions": {
    "displayType": "grid"
  },
  "displayComponent": {
    // Define the component you want to display the results.
    "component": "vh-result-item",
    // Define what prop on that component maps to what field in the ES results.
    // { type: "icon, text, date, image, link, formatted", ...props }
    "mapping": {
      "icon": { "type": "icon", "symbol": "audio" },
      "title": { "type": "text", "field": "field_title" },
      "date": { "type": "date", "field": "field_start_date", "format": "DD MMM YYYY" },
      "subTop": {
        "type": "formatted",
        "fields": [
          { "type": "text", "field": "field_conviction_number" },
          { "type": "date", "field": "field_date_of_conviction", "format": "DD MMM YYYY" }
        ],
        "format": "Conviction number: {field_conviction_number} | Date of conviction: {field_date_of_conviction}"
      },
      "summary": { "type": "text", "field": "field_summary" },
      "subBottom": {
        "type": "formatted",
        "fields": [
          { "type": "text", "field": "field_format" },
          { "type": "text", "field": "field_duration" },
          { "type": "text", "field": "field_size" }
        ],
        "format": "Format: {field_format} | Duration: {field_duration} | Size: {field_size}"
      }
    }
  }
}
