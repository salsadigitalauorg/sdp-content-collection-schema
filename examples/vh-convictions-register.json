{
  "internal": {
    "contentTypes": ["conviction_record"],
    "sort": [
      { "field": "field_date_of_conviction", "direction": "desc" }
    ],
    "itemsToLoad": 1000
  },
  "interface": {
    "display": {
      "type": "grid",
      "options": {
        "noResultsText": "There are no convictions in the register."
      },
      "resultComponent": {
        "type": "vh-search-result",
        "options": {
          "mapping": {
            "title":  { "type": "text", "field": "field_trading_name" },
            "subTop": {
              "type": "formatted",
              "fields": [
                { "type": "text", "field": "field_company_name" },
                { "type": "date", "field": "field_address" }
              ],
              "format": "{field_company_name} | {field_address}"
            },
            "subBottom": {
              "type": "formatted",
              "fields": [
                { "type": "text", "field": "field_conviction_number" },
                { "type": "date", "field": "field_date_of_conviction", "format": "DD MMM YYYY" }
              ],
              "format": "Conviction number: {field_conviction_number} | Date of conviction: {field_date_of_conviction}"
            }
          }
        }
      }
    }
  }
}
